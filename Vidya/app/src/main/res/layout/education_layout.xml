<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="High School"
        android:id="@+id/textView7"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="20dp"
        android:textColor="#000000"
        android:textSize="24dp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton2"
        android:src="@drawable/ryan"
        android:layout_marginLeft="30dp"
        android:onClick="click1"
        android:textAlignment="center"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="1+2 PU College"
        android:id="@+id/textView21"
        android:layout_marginLeft="15dp"
        android:textColor="#000000"
        android:textSize="24dp"
        android:layout_marginTop="18dp"
        android:textAlignment="center"
        android:layout_below="@+id/imageButton2"
        android:layout_centerHorizontal="true"
        android:textIsSelectable="false"
        android:textStyle="bold" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton3"
        android:src="@drawable/sric"
        android:onClick="click2"
        android:textAlignment="center"
        android:layout_below="@+id/textView21"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Graduation"
        android:id="@+id/textView22"
        android:textColor="#000000"
        android:textSize="24dp"
        android:layout_marginTop="26dp"
        android:textAlignment="center"
        android:layout_below="@+id/imageButton3"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:id="@+id/imageButton4"
        android:src="@drawable/pes"
        android:onClick="click3"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView22"
        android:layout_alignStart="@+id/imageButton2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Tap To Display Details "
        android:id="@+id/textView"
        android:textSize="15dp"
        android:textAlignment="center"
        android:layout_below="@+id/imageButton4"
        android:layout_alignEnd="@+id/textView21" />
</RelativeLayout>
